<form asp-action="Login" class="mt-5" method="post">
    <div class="container-fluid  ">
        <div class="row">
            <div class="col-sm-12 col-md-6 div-center-vertical">
                <h1> Login page</h1>
                <div asp-validation-summary="All"></div>
                <div class="form-group mb-2">
                    <label class="block" for="loginEmail">E-mail</label>
                    <input class="form-control" required id="loginEmail" type="email" name="email" value="" />
                </div>
                <div class="form-group mb-2">
                    <label class="block" for="loginPass">Password</label>
                    <input class="form-control" required id="loginPass" type="password" name="password" value="" />
                </div>
                
                <button class="w-100" type="submit">Login</button>
                <button class="mt-2" type="submit">Register</button>

            </div>
            <div class="col-sm-12 col-md-6 only-big-screen">
                <img width="100%" src="~/img/Logo-normal-icon-only-White-BackGround.png" alt="website logo">
            </div>
        </div>
    </div>
</form>
